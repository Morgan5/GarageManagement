@model GarageManagement.FrontOffice.Models.Vehicle

@{
    ViewData["Title"] = "Modification du Véhicule";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>
        </div>

            <!-- Vehicule Form -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Immatriculation" class="form-label"></label>
                            <input asp-for="Immatriculation" class="form-control" />
                            <span asp-validation-for="Immatriculation" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ModelId" class="form-label">Modèle</label>
                            <select asp-for="ModelId" class="form-control">
                                <option value="">Sélectionner un modèle</option>
                                @foreach (var modele in ViewBag.Models)
                                {
                                    <!option value="@modele.Id" @(Model.ModelId == modele.Id ? "selected" : "")>@modele.Label</!option>
                                }
                            </select>
                            <span asp-validation-for="ModelId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Sauvegarder</button>
                        </div>
                        
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger mt-3">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                    </form>
                </div>
            </div>
    </div>
</div>

