@{
    ViewData["Title"] = "Ajout Rendez-vous";
}

<h2>Ajout Rendez-vous</h2>

@* Formulaire de création de RDV *@
<form method="post">
    <div class="form-group">
        <label for="VehicleId">Sélectionner un véhicule</label>
        <select class="form-control" id="VehicleId" name="VehicleId" required>
            <option value="">Choisir un véhicule</option>
            @foreach (var vehicle in ViewData["Vehicles"] as List<Vehicle>)
            {
                <option value="@vehicle.Id">@vehicle.Immatriculation</option>
            }
        </select>
    </div>
    
    <div class="form-group">
        <label for="ExpectedAt">Date du rendez-vous</label>
        <input type="datetime-local" class="form-control" id="ExpectedAt" name="ExpectedAt" required />
    </div>
    
    <div class="form-group">
        <label for="Motif">Motif</label>
        <input type="text" class="form-control" id="Motif" name="Motif" required />
    </div>

    <button type="submit" class="btn btn-primary">Créer le rendez-vous</button>
</form>