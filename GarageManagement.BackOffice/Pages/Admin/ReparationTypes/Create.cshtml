@page
@model GarageManagement.BackOffice.Pages.Admin.ReparationTypes.CreateModel

        @{
        ViewData["Title"] = "Create";
        }

    <h1 class="mb-4">Ajout d'un Type de réparation</h1>
    <hr />     

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="ReparationType.Label" class="control-label font-weight-bold"></label>
                        <input asp-for="ReparationType.Label" class="form-control" />
                        <span asp-validation-for="ReparationType.Label" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="ReparationType.DefaultCost" class="control-label font-weight-bold"></label>
                        <input asp-for="ReparationType.DefaultCost" class="form-control" />
                        <span asp-validation-for="ReparationType.DefaultCost" class="text-danger"></span>
                    </div>
                    <!-- Bouton de soumission -->
                        <br/>
                        <div class="form-group text-center">
                            <input type="submit" value="Ajouter" class="btn btn-primary btn-lg" />
                        </div>
                </form>

                <!-- Lien de retour -->
                <div class="text-center mt-4">
                    <a asp-page="Index" class="btn btn-link">Retour à la liste des type de réparation</a>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
