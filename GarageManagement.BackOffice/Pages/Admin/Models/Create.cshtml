@page
@model GarageManagement.BackOffice.Pages.Admin.Models.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
    <h1 class="mb-4">Ajout d'un Modèle</h1>
    <hr />
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="Model.Label" class="control-label"></label>
                        <input asp-for="Model.Label" class="form-control" />
                        <span asp-validation-for="Model.Label" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="Model.BrandId" class="control-label"></label>
                        <select asp-for="Model.BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
                    </div>
                    <!-- Bouton de soumission -->
                        <br/>
                        <div class="form-group text-center">
                            <input type="submit" value="Ajouter" class="btn btn-primary btn-lg" />
                        </div>
                </form>

                <!-- Lien de retour -->
                <div class="text-center mt-4">
                    <a asp-page="Index" class="btn btn-link">Retour à la liste des modèles</a>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
