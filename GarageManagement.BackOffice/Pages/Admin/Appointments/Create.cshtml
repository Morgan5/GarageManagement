@model GarageManagement.BackOffice.Pages.Admin.Appointments.CreateModel

        @{
        ViewData["Title"] = "Create";
        }

    <h1 class="mb-4">Ajout d'un rendez-vous</h1>
    <hr />

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="Appointment.Vehicle" class="control-label font-weight-bold"></label>
                        <select asp-for="Appointment.VehicleId" class ="form-control" asp-items="ViewBag.VehicleId"></select>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="Appointment.Motif" class="control-label font-weight-bold"></label>
                        <input asp-for="Appointment.Motif" class="form-control" />
                        <span asp-validation-for="Appointment.Motif" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Appointment.ExpectedAt" class="control-label font-weight-bold"></label>
                        <input asp-for="Appointment.ExpectedAt" class="form-control" />
                        <span asp-validation-for="Appointment.ExpectedAt" class="text-danger"></span>
                    </div>
                    
                    <!-- Bouton de soumission -->
                        <br/>
                        <div class="form-group text-center">
                            <input type="submit" value="Ajouter" class="btn btn-primary btn-lg" />
                        </div>
                </form>
                <!-- Lien de retour -->
                <div class="text-center mt-4">
                    <a asp-page="Index" class="btn btn-link">Retour Ã  la liste des rendez-vous</a>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
