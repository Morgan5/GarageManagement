@page
@model GarageManagement.BackOffice.Pages.Admin.Appointments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Modification d'un rendez-vous</h1>
<hr />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Appointment.Id" />
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Appointment.Vehicle" class="control-label"></label>
                    <select asp-for="Appointment.VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                    <span asp-validation-for="Appointment.VehicleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Appointment.Motif" class="control-label"></label>
                    <input asp-for="Appointment.Motif" class="form-control" />
                    <span asp-validation-for="Appointment.Motif" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Appointment.ExpectedAt" class="control-label"></label>
                    <input asp-for="Appointment.ExpectedAt" class="form-control" />
                    <span asp-validation-for="Appointment.ExpectedAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    
                    <label asp-for="Appointment.ProgrammedAt" class="control-label"></label>
                    <input asp-for="Appointment.ProgrammedAt" class="form-control" />
                    <span asp-validation-for="Appointment.ProgrammedAt" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <input type="submit" value="Modifier" class="btn btn-primary btn-lg" />
                </div>
            </form>
            <!-- Lien de retour -->
            <div class="text-center mt-4">
                <a asp-page="Index" class="btn btn-link">Retour Ã  la liste des rendez-vous</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
