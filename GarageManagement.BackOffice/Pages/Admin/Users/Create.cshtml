@page
@model GarageManagement.BackOffice.Pages.Admin.Users.CreateModel

        @{
            ViewData["Title"] = "Créer un Client";
        }
        
<h1 class="mb-4">Ajout d'un Client</h1>
<hr />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    <div class="form-group form-check">
                        <span class="text-danger">*</span>
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="User.IsAdmin" /> @Html.DisplayNameFor(model => model.User.IsAdmin)
                        </label>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="User.Firstname" class="control-label font-weight-bold"></label>
                        <input asp-for="User.Firstname" class="form-control" />
                        <span asp-validation-for="User.Firstname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="User.Lastname" class="control-label font-weight-bold"></label>
                        <input asp-for="User.Lastname" class="form-control" />
                        <span asp-validation-for="User.Lastname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="User.Birthdate" class="control-label font-weight-bold"></label>
                        <input asp-for="User.Birthdate" class="form-control" />
                        <span asp-validation-for="User.Birthdate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="User.Phone" class="control-label font-weight-bold"></label>
                        <input asp-for="User.Phone" class="form-control" />
                        <span asp-validation-for="User.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="User.Email" class="control-label font-weight-bold"></label>
                        <input asp-for="User.Email" class="form-control" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="User.Password" class="control-label font-weight-bold"></label>
                        <input asp-for="User.Password" class="form-control" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>
                   
                   <!-- Bouton de soumission -->
                    <br/>
                    <div class="form-group text-center">
                        <input type="submit" value="Ajouter" class="btn btn-primary btn-lg" />
                    </div>
            </form>

            <!-- Lien de retour -->
            <div class="text-center mt-4">
                <a asp-page="Index" class="btn btn-link">Retour à la liste des clients</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
