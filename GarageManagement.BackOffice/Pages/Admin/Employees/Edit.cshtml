@page
@model GarageManagement.BackOffice.Pages.Admin.Employees.EditModel

@{
    ViewData["Title"] = "Modifier un employé";
}

<h1 class="mb-4">Modification d'un Employé</h1>
<hr />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Employee.Id" />
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Employee.Firstname" class="control-label"></label>
                    <input asp-for="Employee.Firstname" class="form-control" />
                    <span asp-validation-for="Employee.Firstname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Employee.Lastname" class="control-label"></label>
                    <input asp-for="Employee.Lastname" class="form-control" />
                    <span asp-validation-for="Employee.Lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Employee.Birthdate" class="control-label"></label>
                    <input asp-for="Employee.Birthdate" class="form-control" />
                    <span asp-validation-for="Employee.Birthdate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Employee.Phone" class="control-label"></label>
                    <input asp-for="Employee.Phone" class="form-control" />
                    <span asp-validation-for="Employee.Phone" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <input type="submit" value="Modifier" class="btn btn-primary btn-lg" />
                </div>
            </form>

            <!-- Lien de retour -->
            <div class="text-center mt-4">
                <a asp-page="Index" class="btn btn-link">Retour à la liste des employés</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
